<%= simple_form_for @photo, html: {class: "form-horizontal"} do |f| %>
  <legend>添加MM图片</legend>
  <%= f.input :name, label: "图片名称" %>
  <%= f.input :file, label: "图片文件" %>
  <div class="control-group">
     <label class="control-label">
       远程图片地址
     </label>
    <div class="controls">
      <%= f.text_field :remote_file_url %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "提交", class: "btn btn-success span2"  %>
  </div>
<% end %>